# ════════════════════════════════════════════
#   LLM Platform — Environment Variables
# ════════════════════════════════════════════

# ─── App ─────────────────────────────────────
NODE_ENV=production
PORT=4000

# ─── Auth & Security ─────────────────────────
JWT_SECRET=change-this-to-a-very-long-random-string-min-64-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# ─── Database ────────────────────────────────
MONGODB_URI=mongodb://mongo:27017/llm-platform
REDIS_URL=redis://:redispass@redis:6379
REDIS_PASSWORD=redispass

# ─── AI Providers ────────────────────────────
ANTHROPIC_API_KEY=sk-ant-api03-...
OPENAI_API_KEY=sk-...
GOOGLE_GENERATIVE_AI_API_KEY=AIza...
OLLAMA_BASE_URL=http://localhost:11434

# ─── Frontend ────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_APP_NAME=LLM Platform

# ─── Admin (first run) ───────────────────────
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=change-me-immediately

# ─── Rate Limiting ───────────────────────────
THROTTLE_TTL=60000
THROTTLE_LIMIT=60

# ─── File Upload ─────────────────────────────
MAX_FILE_SIZE_MB=20
UPLOAD_DIR=./uploads
